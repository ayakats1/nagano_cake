  <div class='container'>
    <div class='row'>
      <div class='col-12'>
        <h2>注文履歴一覧</h2>

        <table class='table'>
          <thead>
            <tr class="table-active">
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td><%= link_to order.created_at.to_s(:datetime_jp), admin_order_path(order.id) %></td>
              <td><%= order.name %></td>
              <td>
                <% amount = 0 %>
                <% order.order_details.each do |order_detail| %>
                  <% amount += order_detail.amount %>
                <% end %>
                <%= amount %>
              </td>
              <td><%= order.status_i18n %></td>
            </tr>
          </tbody>
          <% end %>
        </table
        <%= paginate @orders %>
      </div>
    </div>
  </div>

