  <div class='container'>
    <div class='row'>
      <div class='col-6'>
        <h2>ジャンル編集</h2>

        <table class="table table-borderless">
          <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
          <tr>
            <th>ジャンル名</th>
            <th><%= f.text_field :name %></th>
            <th><%= f.submit '変更を保存', class: "btn btn-success" %></th>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>