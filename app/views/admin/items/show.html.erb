<h2>商品詳細</h2>

  <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>

  <h4>商品名</h4>
  <%= @item.name %>
  <h4>商品説明</h4>
  <%= @item.introduction %>
  <h4>ジャンル</h4>
  <%= @item.genre.name %>
  <h4>税込価格(税抜価格)</h4>
  <%= @item.add_tax_price.to_s(:delimited) %>
  (<%= @item.price.to_s(:delimited) %>)円
  <h4>販売ステータス</h4>
  <% case @item.is_active %>
          <% when true then %>
            <p class="text-success">販売中</p>
          <% else %>
            <p class="text-secondary">販売停止中</p>
          <% end %>

  <%= link_to "編集する", edit_admin_item_path %>