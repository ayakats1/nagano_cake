  <div class="col-md-7">
    <h2><%= @customer.first_name+@customer.last_name %>さんの会員詳細</h2>

      <table class="table table-borderless">
      <tr>
        <th width="30%">会員ID</th>
        <th width="70%"><%= @customer.id %></th>
      </tr>
      <tr>
        <th>氏名</th>
        <th>
          <%= @customer.first_name %>
          <%= @customer.last_name %>
        </th>
      </tr>
      <tr>
        <th>カナ</th>
        <th>
          <%= @customer.first_name_kana %>
          <%= @customer.last_name_kana %>
        </th>
      </tr>
      <tr>
        <th>郵便番号</th>
        <th><%= @customer.postal_code %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= @customer.address %></th>
      </tr>
      <tr>
        <th>電話番号</th>
        <th><%= @customer.telephone_number %></th>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <th>
          <% case @customer.is_deleted %>
            <% when false then %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="text-secondary">退会</p>
          <% end %>
        </th>
      </tr>
      </table>

      <%= link_to edit_admin_customer_path(@customer.id), class: "btn btn-success" do %>編集する
      <% end %>
      <%= link_to admin_orders_path, class: "btn btn-primary" do %>注文履歴一覧を見る
      <% end %>

  </div>

