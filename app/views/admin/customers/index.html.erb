  <div class='container'>
    <div class='row'>
      <h2>会員一覧</h2>

      <table class='table'>
        <thead>
          <tr class="table-active">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.first_name+customer.last_name %>
                <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% case customer.is_deleted %>
              <% when false then %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-secondary">退会</p>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
        <%= paginate @customers %>
      </table>
    </div>
  </div>

