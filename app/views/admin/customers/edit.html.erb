  <div class="col-md-7">
    <h2><%= @customer.first_name+@customer.last_name %>さんの会員情報編集</h2>
      <%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
        <table class="table table-borderless">
          <tr>
            <th><%= f.label :氏名 %></th>
            <th>
              <%= f.text_field :first_name %>
              <%= f.text_field :last_name %>
            </th>
          </tr>
          <tr>
            <th><%= f.label :フリガナ %></th>
            <th>
              <%= f.text_field :first_name_kana %>
              <%= f.text_field :last_name_kana %>
            </th>
          </tr>
          <tr>
            <th><%= f.label :郵便番号 %></th>
            <th><%= f.text_field :postal_code %></th>
          </tr>
          <tr>
            <th><%= f.label :住所 %></th>
            <th><%= f.text_field :address, :size => "60*60" %></th>
          </tr>
          <tr>
            <th><%= f.label :電話番号 %></th>
            <th><%= f.text_field :telephone_number %></th>
          </tr>
          <tr>
            <th><%= f.label :メールアドレス %></th>
            <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th>
              <%= f.radio_button :is_deleted, false %>有効
              <%= f.radio_button :is_deleted, true %>退会
            </th>
          </tr>
        </table>
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      <% end %>
  </div>