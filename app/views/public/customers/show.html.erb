<h2>マイページ</h2>

<h4>登録情報</h4>
  <%= link_to edit_customer_path(current_customer), class: "btn btn-success" do %>編集する
  <% end %>

  <div class="col-md-7">
  <table class="table table-bordered">
  <tr>
    <th width="30%">氏名</th>
    <th width="70%">
      <%= @customer.first_name %>
      <%= @customer.last_name %>
    </th>
  </tr>
  <tr>
    <th>カナ</th>
    <th>
      <%= @customer.first_name_kana %>
      <%= @customer.last_name_kana %>
    </th>
  </tr>
  <tr>
    <th>郵便番号</th>
    <th><%= @customer.postal_code %></th>
  </tr>
  <tr>
    <th>住所</th>
    <th><%= @customer.address %></th>
  </tr>
  <tr>
    <th>電話番号</th>
    <th><%= @customer.telephone_number %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= @customer.email %></th>
  </tr>
  </table>
  </div>

  <h4>配送先</h4>
  <%= link_to addresses_path, class: "btn btn-primary" do %>一覧を見る
  <% end %>
  <h4>注文履歴</h4>
  <%= link_to orders_path, class: "btn btn-primary" do %>一覧を見る
  <% end %>