<h2>商品詳細</h2>
<div class="row">
  <div class="col-4">
    <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300" %>
      <% else %>
        <%= image_tag 'no_image', size: "300x300" %>
      <% end %>
  </div>
  <div class="col-6">
    <h2><%= @item.name %></h2>

    <h3><%= @item.introduction %></h3>

    <h3>￥<%= @item.with_tax_price %>(税込)</h3>

  <%= form_with model: @cart_item, url: cart_items_path, method: :post do |cart_item| %>
    <%= cart_item.hidden_field :item_id, :value => @item.id %>
    <%= cart_item.select :amount, *[1..10] %>
    <%= cart_item.submit "カートに入れる", class: "btn btn-success" %>
  <% end %>

  </div>
</div>