  <div class='container'>
    <div class='row'>
      <div class='col-8'>
        <h2>ログイン</h2>
      </div>
          <div class='col-8 offset-1'>
            <h4>会員の方はこちらからログイン</h4>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <table class="table table-borderless">
                <tr>
                  <th>
                    <%= f.label :メールアドレス %>
                  </th>
                  <td>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "40*40" %>
                  </td>
                </tr>
                <tr>
                  <th>
                    <%= f.label :パスワード %>
                  </th>
                  <td>
                    <%= f.password_field :password, autocomplete: "current-password", :size => "40*40" %>
                  </td>
                </tr>
                <%# if devise_mapping.rememberable? %>
                    <%#= f.check_box :remember_me %>
                    <%#= f.label :remember_me %>
                <%# end %>
                <tr>
                  <td>
                    <%= f.submit "ログイン", class: "btn btn-primary" %>
                  </td>
                </tr>
              </table>
              <% end %>

              <h4>会員登録がお済みでない方</h4>
              <h4>
                <%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。
              </h4>
          </div>
    </div>
  </div>
