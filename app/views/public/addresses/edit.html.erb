<h2>配送先編集</h2>

<%= form_with model: @address, url: address_path(current_customer), method: :patch do |address| %>
        <table class="table table-borderless">
          <tr>
            <th><%= address.label :郵便番号 %>(ハイフンなし)</th>
            <th>
              <%= address.text_field :postal_code %>
            </th>
          </tr>
          <tr>
            <th><%= address.label :住所 %></th>
            <th>
              <%= address.text_field :address %>
            </th>
          </tr>
          <tr>
            <th><%= address.label :宛名 %></th>
            <th><%= address.text_field :name %></th>
          </tr>
        </table>
        <%= address.submit "変更内容を保存", class: "btn btn-success" %>
      <% end %>
