  <div class="col-md-7">
    <h2>配送先登録/一覧</h2>

      <%= form_with model: @address, url: addresses_path, method: :post do |address| %>
        <table class="table table-borderless">
          <tr>
            <th><%= address.label :郵便番号 %>(ハイフンなし)</th>
            <th>
              <%= address.text_field :postal_code %>
            </th>
          </tr>
          <tr>
            <th><%= address.label :住所 %></th>
            <th>
              <%= address.text_field :address, :size => "60*60" %>
            </th>
          </tr>
          <tr>
            <th><%= address.label :宛名 %></th>
            <th><%= address.text_field :name %></th>
            <th><%= address.submit "新規登録", class: "btn btn-success" %></th>
          </tr>
        </table>
      <% end %>

      <table class="table table-bordered">
      <thead>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="1"></th>
      </thead>
      <% @addresses.each do |address| %>
      <tbody>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to edit_address_path(current_customer), class: "btn btn-success" do %>編集する
              <% end %>
              <%= link_to "削除する", addresses_path, class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？"%>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>