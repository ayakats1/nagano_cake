  <div class='container'>
    <div class='row'>
      <div class="col-md-10">
        <h2>配送先登録/一覧</h2>

          <%= form_with model: @address, url: addresses_path, method: :post do |address| %>
            <table class="table table-borderless">
              <tr>
                <th><%= address.label :郵便番号 %>(ハイフンなし)</th>
                <th>
                  <%= address.text_field :postal_code %>
                </th>
              </tr>
              <tr>
                <th><%= address.label :住所 %></th>
                <th>
                  <%= address.text_field :address, :size => "60*60" %>
                </th>
              </tr>
              <tr>
                <th><%= address.label :宛名 %></th>
                <th><%= address.text_field :name %></th>
                <th><%= address.submit "新規登録", class: "btn btn-success" %></th>
              </tr>
            </table>
          <% end %>
      </div>
      <div class="col-md-10">
          <table class="table table-bordered">
          <thead>
              <th>郵便番号</th>
              <th width="40%">住所</th>
              <th width="20%">宛名</th>
              <th colspan="1"></th>
          </thead>
          <% @addresses.each do |address| %>
          <tbody>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td><%= link_to edit_address_path(address.id), class: "btn btn-success" do %>編集する
                  <% end %>
                  <%= link_to "削除する", address_path(address.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？"%>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>