  <div class='container'>
    <div class='row'>
      <div class='col-8'>
        <h2>新規会員登録</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>
          <table class="table table-borderless">
            <tr>
              <th width="30%">
                <%= f.label :名前 %>
              </th>
              <td width="35%">
                (姓)<%= f.text_field :first_name, placeholder: "令和" %>
              </td>
              <td width="35%">
                (名)<%= f.text_field :last_name, placeholder: "道子" %>
              </td>
            </tr>
            <tr>
              <th>
                <%= f.label :フリガナ %><br>
              </th>
              <td>
                (セイ)<%= f.text_field :first_name_kana, placeholder: "レイワ" %>
              </td>
              <td>
                (メイ)<%= f.text_field :last_name_kana, placeholder: "ミチコ" %>
              </td>
            </tr>
            <tr>
              <th>
                <%= f.label :メールアドレス %>
              </th>
              <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
              </td>
            </tr>
            <tr>
              <th>
                <%= f.label :郵便番号 %>(ハイフンなし)
              </th>
              <td>
                <%= f.text_field :postal_code, placeholder: "0000000" %>
              </td>
            </tr>
            <tr>
              <th>
                <%= f.label :住所 %>
              </th>
              <td colspan="2">
                <%= f.text_field :address, :size => "60*60" %>
              </td>
            </tr>
            <tr>
              <th>
                <%= f.label :電話番号 %>(ハイフンなし)
              </th>
              <td>
                <%= f.text_field :telephone_number, placeholder: "0000000000" %>
              </td>
            </tr>
            <tr>
              <th>
                <%= f.label :パスワード %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %><br />
              </th>
              <td>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </td>
            </tr>
            <tr>
              <th>
                <%= f.label :パスワード %>(確認用)
              </th>
              <td>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </td>
            </tr>
            <tr>
              <th colspan="1"></th>
              <th>
                <%= f.submit "新規登録", class: "btn btn-success" %>
              </th>
            </tr>
          </table>
          <% end %>

        <h4>既に登録済みの方</h4>
        <h4>
          <%= link_to "こちら", new_customer_session_path %>からログインしてください。
        </h4>
      </div>
    </div>
  </div>
