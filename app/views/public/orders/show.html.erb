  <div class='container'>
    <h2>注文履歴詳細</h2>
      <div class='row'>
        <div class="col-md-6">
          <h4>注文情報</h4>
            <table class="table table-bordered">
              <tr>
                <th class="table-active">注文日</th>
                <td><%= @order.created_at.to_s(:datetime_jp) %></td>
              </tr>
              <tr>
                <th class="table-active">配送先</th>
                <td>
                  <%= @order.postal_code %><br>
                  <%= @order.address %><br>
                  <%= @order.name %>
                </td>
              </tr>
                <th class="table-active">支払方法</th>
              <td><%= @order.payment_method_i18n %></td>
              <tr>
                <th class="table-active">ステータス</th>
                <td><%= @order.status_i18n %></td>
              </tr>
            </table>
        </div>

        <div class="col-md-4">
          <h4>請求情報</h4>
              <table class="table table-bordered">
                <tr>
                  <th class="table-active">商品合計</th>
                  <td><%= @order.total_payment - @order.shipping_cost %></td>
                </tr>
                <tr>
                  <th class="table-active">配送料</th>
                  <td><%= @order.shipping_cost %></td>
                </tr>
                <tr>
                  <th class="table-active">ご請求額</th>
                  <td><%= @order.total_payment %></td>
                </tr>
              </table>
        </div>

      </div>
      <div class='row'>
        <div class="col-md-10">
          <h4>注文内容</h4>
            <table class="table table-bordered">
              <thead>
                <tr class="table-active">
                  <th>商品</th>
                  <th>単価(税込)</th>
                  <th>個数</th>
                  <th>小計</th>
                </tr>
              </thead>
              <tbody>
                <% @order_details.each do |order_detail| %>
                <tr>
                  <td><%= order_detail.item.name %></td>
                  <td><%= order_detail.purchase_price %></td>
                  <td><%= order_detail.amount %></td>
                  <td><%= order_detail.purchase_price * order_detail.amount %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
  </div>
