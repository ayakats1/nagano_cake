<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand">LOGO</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <% if admin_signed_in? %>
                <ul class="navbar-nav ml-auto">
                  <li>
                    <%= link_to "商品一覧", admin_items_path, class: "btn btn-light" %>
                  </li>
                  <li>
                    <%= link_to "会員一覧", admin_customers_path, class: "btn btn-light ml-3" %>
                  </li>
                  <li>
                    <%= link_to "注文履歴一覧", admin_orders_path, class: "btn btn-light ml-3" %>
                  </li>
                  <li>
                    <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-light ml-3" %>
                  </li>
                  <li>
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-light ml-3" %>
                  </li>
                </ul>
              <% elsif customer_signed_in? %>
                <ul class="navbar-nav ml-auto">
                  <li>
                    <%= link_to "マイページ", public_customer_path, class: "btn btn-light" %>
                  </li>
                  <li>
                    <%= link_to "商品一覧", public_items_path, class: "btn btn-light ml-3" %>
                  </li>
                  <li>
                    <%= link_to "カート", public_cart_items_path, class: "btn btn-light ml-3" %>
                  </li>
                  <li>
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-light ml-3" %>
                  </li>
                </ul>
              <% else %>
                <ul class="navbar-nav ml-auto">
                  <li>
                    <%= link_to "About", public_about_path, class: "btn btn-light" %>
                  </li>
                  <li>
                    <%= link_to "商品一覧", public_items_path, class: "btn btn-light ml-3" %>
                  </li>
                  <li>
                    <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-light ml-3" %>
                  </li>
                  <li>
                    <%= link_to "ログイン", new_customer_session_path, class: "btn btn-light ml-3" %>
                  </li>
                </ul>
              <% end %>
            </div>
        </div>
      </nav>
    </header>
      <main>
        <%= yield %>
      </main>
    <footer>
    </footer>
  </body>
</html>
